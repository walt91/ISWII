@{
    ViewBag.Title = "Contact";
}
 @Styles.Render("~/Content/style.css")
@using (Html.BeginForm()) {
   
      <div id="divContact" >
      <h4 id="">CONTACT ME</h4>
        <div id="div1"class="editor-label">
            <label>Name</label>
        </div>
        <div id="divName"class="editor-field">
            <input id="input1" required type="text" name="name" placeholder="Write your Name" />
        </div>
        <div id="di3"class="editor-label">
            <label>E-mail</label>
        </div>
        <div id="di4"class="editor-field">
            <input id="input2" required type="text" name="email"placeholder="Write your E-mail"/>
        </div>
        <div id="di7"class="editor-label">
            <label>Commentary</label>
        </div>
        <div id="di8"class="editor-field">
            <textarea id="textArea"cols=30 rows=10 name="Write a commentary"> 
             </textarea>
        </div>
           <br />
        <p>
            <button id="BtnEnviar">Enviar</button>
        </p>
    </div>
    
    <script type="text/javascript">
        $("#BtnEnviar").click(function () {
           
          
            $.ajax({
                url: '/Home/Contact',
                type: '',
                data: { },
            })        
    });
</script>
}
